@page
@using Microsoft.AspNetCore.Identity
@model Goose_Panda_love_Coffee.Pages.Classes.Pages_Classes_ClassIndex
@inject SignInManager<SiteUser> SignInManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (SignInManager.IsSignedIn(User))
{
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Class[0].classId)
                   
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Last)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Credit)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.First)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credit)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.StudentId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.StudentId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.StudentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].First)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Last)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Credit)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.First)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credit)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}