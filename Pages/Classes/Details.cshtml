                   <th>---</th>
                   <th>Credit</th>
                   <th>---</th>
                   <th>Modify</th>
               </tr>
               
           
        @foreach (var student in Model.Classes.Enrolled){
            
                <tr>
                    <td>@student.First</td>
                    <td>   </td>
                    <td>@student.Last</td>
                    <td>   </td>
                    <td>@student.Credit  </td>
                    <td>   </td>
                    <td> <a asp-page="./EditCredit" asp-route-studentid="@student.StudentId" asp-route-courseid="@Model.Classes.ClassesId">Edit Credit</a></td>
                </tr>

            
        }
        </table>
    }
</div>
