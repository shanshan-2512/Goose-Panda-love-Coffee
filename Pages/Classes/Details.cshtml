@page
@model Goose_Panda_love_Coffee.Pages_Classes.DetailsModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>

    <h4>Classes</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classes.ClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classes.ClassName)
        </dd>
    </dl>
    @if(Model.Classes != null && Model.Classes.Enrolled != null){
       <table>
           
               <tr>
                   <th>First</th>
                   <th>Last</th>
               </tr>
               
           
        @foreach (var student in Model.Classes.Enrolled){
            
                <tr>
                    <td>@student.First</td>
                    <td>@student.Last</td>
                </tr>

            
        }
        </table>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Classes.ClassesId">Edit</a> |

    <a asp-page="./Index">Back to List</a>
</div>
